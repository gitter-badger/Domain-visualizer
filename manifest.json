{
    "name": "Environment checker",
    "version": "0.1",
    "description": "Checks your current env for you.",
    "browser_action":	{
        "default_icon": "img/icon.png",
        "default_popup": "html/popup.html"
    },
    "icons":{
        "128":"img/icon_128.png"
    },
    "manifest_version": 2,
     "options_page": "html/options.html",
     "permissions": [
    	"storage",
     	"tabs"
  ],
    "web_accessible_resources": [

  ],
  "content_scripts":
   [
  	{
     	  "js": [ "js/jquery.min.js", "js/content_script.js" ],
   	    "matches": [ "http://*/*", "https://*/*"]
	}
    ]
  
}
